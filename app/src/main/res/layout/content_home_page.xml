<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.stefano.gioda.mytournament.activity.HomePage"
    tools:showIn="@layout/activity_home_page">

    <FrameLayout
        android:id="@+id/visualizza_tornei"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:background="@color/visualizza_tornei">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Visualizza tornei"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <FrameLayout
            android:id="@+id/crea_torneo"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/crea_torneo">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Crea torneo"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/visualizza_squadre"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/visualizza_squadre">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Visualizza squadre"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white" />

        </FrameLayout>

    </LinearLayout>
</LinearLayout>
